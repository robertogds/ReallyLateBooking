# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       module:secure

# Home page
GET     /                                       Application.index

GET 	/admin									module:crudsiena

# Deals
GET 	/deals/list/{city}						Deals.list
GET 	/deals/{city}							Deals.iPhoneList(format:'json')

# Cities
GET 	/cities							    	Cities.cityList(format:'json')

# Users Rest
POST    /users/login                            Application.login
GET     /users                					Users.list(format:'json')
GET     /user/{id}            					Users.show(format:'json')
POST    /users               					Users.create(format:'json')
PUT     /user/{id}            					Users.update(format:'json')
DELETE  /user/{id}            					Users.delete


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all
*       /{controller}/{action}                  {controller}.{action}

