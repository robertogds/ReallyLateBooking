<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/cron/refreshHotUsaPrices</url>
    <description>Repopulate hotel availability every 20 minutes</description>
    <schedule>every 15 minutes</schedule>
  </cron>
  <cron>
    <url>/cron/confirmReservations</url>
    <description>Confirm partial reservations every 5 minutes</description>
    <schedule>every 5 minutes</schedule>
  </cron>
  <cron>
    <url>/cron/movePrices</url>
    <description>Move prices and rooms to the current day</description>
    <schedule>every day 06:05</schedule>
    <timezone>Europe/Madrid</timezone>
  </cron>
  
  <cron>
    <url>/cron/sendSurveyEmails</url>
    <description>Send survey emails to the previous day bookers</description>
    <schedule>every day 11:00</schedule>
    <timezone>Europe/Madrid</timezone>
  </cron>
  <cron>
    <url>/cron/sendRememberPriceEmails</url>
    <description>Send remember email to hotel owners</description>
    <schedule>every day 08:00</schedule>
    <timezone>Europe/Madrid</timezone>
  </cron>

</cronentries>

